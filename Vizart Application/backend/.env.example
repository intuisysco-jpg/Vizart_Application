# Application Settings
APP_NAME="Vizart AI API"
VERSION="1.0.0"
DEBUG=true
SECRET_KEY="your-secret-key-here-change-this-in-production"

# CORS Settings
ALLOWED_HOSTS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Directory Settings
UPLOAD_DIR="./static/uploads"
RESULTS_DIR="./static/results"
MODEL_CACHE_DIR="./models"

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# AI Model Settings
ENABLE_GPU=true
MODEL_DEVICE="cuda"  # or "cpu" if no GPU available
MAX_CONCURRENT_JOBS=4
JOB_TIMEOUT=300
RESULT_EXPIRY_TIME=3600

# Database Settings
DATABASE_URL="postgresql://username:password@localhost:5432/vizart_db"

# Redis Settings
REDIS_URL="redis://localhost:6379/0"

# AWS S3 Settings (Optional - for cloud storage)
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="us-east-1"
# S3_BUCKET="your-s3-bucket-name"
# S3_ENDPOINT_URL="https://s3.amazonaws.com"

# Monitoring Settings (Optional)
# SENTRY_DSN="your-sentry-dsn"

# AI Model URLs (Optional - for downloading models)
# VITON_MODEL_URL="https://example.com/models/viton.pth"
# REMBG_MODEL_URL="https://example.com/models/rembg.pth"